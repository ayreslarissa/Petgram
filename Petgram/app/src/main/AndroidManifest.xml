<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.journaldev.recyclerviewcardview" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Inicio.InitialActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ListaAnimais.InfoActivity"
            android:label="@string/title_activity_info"
            android:theme="@style/AppTheme"
            android:parentActivityName=".ListaAnimais.MainActivity">
        </activity>
        <activity
            android:name=".ListaAnimais.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme"
            android:parentActivityName=".Inicio.InitialActivity">
        </activity>
        <activity
            android:name=".HistoricoAdocoes.HistoricoAdocao"
            android:label="@string/title_activity_historico_adocao"
            android:parentActivityName=".Inicio.InitialActivity">
        </activity>
    </application>

</manifest>
